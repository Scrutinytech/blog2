<div style = "width: 100%, height: 100%, padding: 'border-box' overflow-y: hidden">
  <%= image_tag (@post.banner) %>
</div>

<div class="container" style: "margin-top: 2em">
  <div class: "row">
    <div class: "jumbotron" style = 100% >
      <hi>
        <%= link_to @post.title, root_path %>
      </h1>
      <p class: "lead">
        <%= @post.updated_at %> by <%= @post.user.email %> | 
      </p>
      <hr class: 'my-2' />
      <div class: 'post_body'>
        <%= @post.body %>
      </div>
  </div>
</div>